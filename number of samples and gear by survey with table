select 
su.surveyname,
s.gear_gearcode,
COUNT(DISTINCT s.samplecode) 

from associations.survey as su
inner join associations.surveysample as ss on su.surveyname=ss.survey_surveyname
inner join samples.sample as s on ss.sample_samplecode=s.samplecode
where su.id>802
group by su.surveyname,s.gear_gearcode;

library(knitr)
  library(kableExtra)

    kable(data, escape=FALSE,format = "html") %>%
      column_spec (1, bold = T)%>%
      kable_styling(bootstrap_options = c("striped","hover", "condensed"))
